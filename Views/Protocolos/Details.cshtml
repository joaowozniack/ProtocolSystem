@model Protocolo

@{
    ViewData["Title"] = "Detalhes do Protocolo";
}

<h2 class="titulo">Detalhes do Protocolo</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Titulo</h4>
        <p><strong>Descrição:</strong> @Model.Descricao</p>
        <p><strong>Cliente:</strong> @Model.Cliente.Nome</p>
        <p><strong>Status:</strong> @Model.ProtocoloStatus.NomeStatus</p>
    </div>
    <div class="form-action">
        <a asp-action="Edit" asp-route-id="@Model.IdProtocolo" style="font-size: 15px" class="btn-submit-edit">Editar</a>
        <a asp-action="Index" class="btn-cancel">Voltar</a>
    </div>
</div>