@model Cliente

@{
    ViewData["Title"] = "Excluir Cliente";
}

<h2>Tem certeza que deseja excluir este cliente?</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Nome</h4>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Telefone:</strong> @Model.Telefone</p>
        <p><strong>Endereço:</strong> @Model.Endereco</p>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="IdCliente" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>