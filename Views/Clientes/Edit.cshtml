@model Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<h2 class="titulo">Editar Cliente</h2>

<form asp-action="Edit" method="post" class="form-model">
    <input type="hidden" asp-for="IdCliente" />
    <div class="form-group">
        <label>Nome</label>
        <input asp-for="Nome" class="input-text" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" type="email" class="input-text" required />
    </div>
    <div class="form-group">
        <label>Telefone</label>
        <input asp-for="Telefone" class="input-text" required />
    </div>
    <div class="form-group">
        <label>Endereço</label>
        <input asp-for="Endereco" class="input-text" />
    </div>
    <div class="form-action">
        <button type="submit" class="btn-submit" style="font-size: 15px">Salvar</button>
        <a asp-action="Index" class="btn-cancel">Cancelar</a>
    </div>
</form>