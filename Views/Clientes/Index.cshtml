@model List<Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<h2 class="titulo">Lista de Clientes</h2>
<a class="btn-submit-new" asp-action="Create">Novo Cliente</a>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Endereço</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.Email</td>
                <td>@cliente.Telefone</td>
                <td>@cliente.Endereco</td>
                <td>
                    <a class="btn-submit-edit" asp-action="Edit" asp-route-id="@cliente.IdCliente">Editar</a>
                    <a class="btn-submit-details" asp-action="Details" asp-route-id="@cliente.IdCliente">Detalhes</a>
                    <a class="btn-submit-delete" asp-action="Delete" asp-route-id="@cliente.IdCliente">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
