@model Cliente

@{
    ViewData["Title"] = "Detalhes do Cliente";
}

<h2 class="titulo">Detalhes do Cliente</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Nome</h4>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Telefone:</strong> @Model.Telefone</p>
        <p><strong>Endereço:</strong> @Model.Endereco</p>
    </div>
    <div class="form-action">
        <a asp-action="Edit" asp-route-id="@Model.IdCliente" style="font-size: 15px" class="btn-submit-edit">Editar</a>
        <a asp-action="Index" class="btn-cancel">Voltar</a>
    </div>
</div>


