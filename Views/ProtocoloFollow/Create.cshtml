@model ProtocoloFollow

@{
    ViewData["Title"] = "Novo Acompanhamento";
}

<h2>Adicionar Acompanhamento</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Protocolo</label>
        <select asp-for="ProtocoloId" asp-items="ViewBag.ProtocoloList" class="form-control" required></select>
    </div>
    <div class="form-group">
        <label>Data da Ação</label>
        <input asp-for="DataAcao" type="datetime-local" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Descrição</label>
        <textarea asp-for="DescricaoAcao" class="form-control" required></textarea>
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>